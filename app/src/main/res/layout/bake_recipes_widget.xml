<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/widget_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:numColumns="2"/>

    <ImageButton
        android:id="@+id/home_widget_btn"
        android:layout_gravity="bottom|center"
        android:src="@drawable/homewidget"
        android:scaleType="fitCenter"
        android:layout_width="@dimen/widget_button_width"
        android:layout_height="@dimen/widget_home_height"
        android:background="@color/colorWhite"
        android:paddingBottom="@dimen/widget_home_padding"
        android:layout_margin="@dimen/widget_home_button_margin"
        android:contentDescription="@string/widget_home_button_icon" />

    <RelativeLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/empty_text_view"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/widget_text_title_size"
            android:textStyle="bold" />

    </RelativeLayout>

</FrameLayout>